{
  "name": "hog-routes",
  "version": "0.0.0",
  "description": "A route tools to express/hapi with validations and swagger docs generator based on [Betelgeuse](https://github.com/MarcosRava/betelgeuse) instances",
  "main": "build",
  "engines": {
    "node": "~6.4.x"
  },
  "scripts": {
    "start": "npm run build && node build",
    "dev": "nodemon --exec 'npm run lint && npm run test-es6 && npm run build' -i build ",
    "test": "npm run lint && npm run build && NODE_PATH=./build npm run test-mocha",
    "test-mocha": "mocha --compilers js:babel-register",
    "test-es6": "NODE_PATH=./src  npm run test-mocha",
    "postinstall": "npm run check-dependencies",
    "check-dependencies": "nsp check",
    "lint": "eslint src test",
    "build": "mkdir -p build && NODE_PATH=./src babel src --out-dir build"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run lint"
      ],
      "post-commit": [
        "git status"
      ],
      "pre-push": [
        "npm test"
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarcosRava/hog-routes.git"
  },
  "author": "MArcos Rava <marcosrava@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarcosRava/hog-routes/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.3.26",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-1": "^6.13.0",
    "eslint": "^3.3.1",
    "expect.js": "^0.3.1",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.2",
    "nsp": "^2.6.1",
    "pre-git": "^3.10.0"
  },
  "homepage": "https://github.com/MarcosRava/hog-routes#readme"
}
